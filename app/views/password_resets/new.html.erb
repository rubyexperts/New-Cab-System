<% title "Password reset" %>

<%= form_tag password_resets_path, :method => :post do %>
  <p>
    <%= label_tag :email, 'Email' %><br />
    <%= text_field_tag :email %>
  </p>

  <p><%= submit_tag "Reset password" %></p>
<% end %>

<p><%= link_to 'Back', login_path  %>  <%#= link_to 'Home', root_path  %></p>

